%h1= 'Articles Search'

= form_for search_path, method: :get do |f|
  %p
    = f.label "Search for"
    = text_field_tag :q, params[:q]
    = submit_tag "Go", name: nil

%ul
  - @articles.each do |article|
    %li
      %h3
        = link_to article.title, controller: "articles", action: "show", id: article._id
