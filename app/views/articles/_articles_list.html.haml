#articles-container-data
  - @articles.each do |article|
    - image_content = article.image? ? article.image_url(:thumb) : 'sample_overlay'
    .box.panel.panel-default
      = link_to (image_tag image_content, size: '150'), article_path(article)
      .panel-body
        %h2= link_to article.title, article
        %span= link_to article.content, article